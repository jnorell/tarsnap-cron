PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

# this is set for backups at an arbitary 1:01am. 

# monthly - every 1st 
1 1 1 * *  root  /usr/local/bin/tarsnap-archive.sh monthly

# weekly - every Monday, not on 1st
1 1 * * *  root  test $(date +\%u) -eq 1 && test $(date +\%e) -ne 01 && /usr/local/bin/tarsnap-archive.sh weekly

# daily - every day, except on 1st, or on Monday
1 1 * * *  root  test $(date +\%u) -ne 1 && test $(date +\%e) -ne 01 && /usr/local/bin/tarsnap-archive.sh daily

# hourly - 1 minute after the hour, except 1:01. 
CONFIG=/etc/tarsnap-cron/tarsnap-cron-hourly.conf
1 0,2-23 * * * root  [ -f ${CONFIG} ] && /usr/local/bin/tarsnap-archive.sh hourly

#* * * * * 
#| | | | | 
#| | | | +---- Day of the Week   (range: 1-7) - date +%u, 1 standing for Monday
#| | | +------ Month of the Year (range: 1-12)
#| | +-------- Day of the Month  (range: 1-31) - date +%e
#| +---------- Hour              (range: 0-23)
#+------------ Minute            (range: 0-59)
